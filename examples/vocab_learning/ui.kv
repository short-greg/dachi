#:kivy
<UI>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            id: chat_history
            # This will be the container for the chat messages
            orientation: 'vertical'
            ScrollView:
                Label:
                    id: chat_label
                    text: ''
                    markup: True
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.width, None
        BoxLayout:
            id: interactive_pane
            # You can add interactive elements here
            orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 50
        TextInput:
            id: input_field
            multiline: False
            on_text_validate: root.on_send_pressed()
        Button:
            text: 'Send'
            on_press: root.on_send_pressed()
